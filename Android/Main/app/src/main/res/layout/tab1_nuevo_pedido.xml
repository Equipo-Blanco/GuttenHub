<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab1_NuevoPedido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_comercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comercial"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_comercial"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#E3F2FD"
            android:ems="10"
            android:hint="Comercial"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_titpartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_partner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#E3F2FD"
            android:ems="10"
            android:hint="Nombre Partner"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Seleccionar ArtÃ­culo y cantidad:"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spn_productos"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_cantidad"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="#E3F2FD"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_coste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coste:"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar al presupuesto" />

        <TextView
            android:id="@+id/tv_idpresup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Presupuesto: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_presupuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Presupuesto"
            app:backgroundTint="#5FAC7B" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>